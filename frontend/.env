# Configurações do Frontend - Sistema de Controle de Combustível

# URL da API Backend
REACT_APP_API_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001

# Configurações de Desenvolvimento
NODE_ENV=development
PORT=3000

# Configurações de Build (se usar bundler como Webpack/Vite)
PUBLIC_URL=/

# Configurações de Debug
DEBUG_MODE=true
SHOW_LOGS=true

# Configurações de Cache
CACHE_ENABLED=true
CACHE_DURATION=300000

# Configurações de Tema (futuro)
DEFAULT_THEME=light
ENABLE_DARK_MODE=true

# Configurações de Relatórios
EXPORT_FORMATS=pdf,excel
MAX_EXPORT_RECORDS=10000

# Para produção, altere para a URL do seu backend deployado
# API_BASE_URL=https://sua-api-backend.herokuapp.com
# NODE_ENV=production
# DEBUG_MODE=false
