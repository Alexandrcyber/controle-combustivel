# Configurações do Frontend - Sistema de Controle de Combustível

# URL do Backend (sem /api)
# Para desenvolvimento local
BACKEND_URL=http://localhost:3001

# URL da API (com /api - para uso no JavaScript do frontend)
API_BASE_URL=http://localhost:3000/api

# Para produção na Vercel (substitua pela URL do seu backend no Render)
# BACKEND_URL=https://seu-backend-render.onrender.com
# API_BASE_URL=https://seu-frontend-vercel.vercel.app/api

# Configurações de Ambiente
NODE_ENV=development
PORT=3000

# Configurações de Build para Vercel
PUBLIC_URL=/

# Configurações de Debug
DEBUG_MODE=true
SHOW_LOGS=true

# Configurações de Cache
CACHE_ENABLED=true
CACHE_DURATION=300000

# Configurações de Tema
DEFAULT_THEME=light
ENABLE_DARK_MODE=true

# Configurações de Relatórios
EXPORT_FORMATS=pdf,excel
MAX_EXPORT_RECORDS=10000

# Configurações específicas para Vercel
VERCEL=1
NEXT_PUBLIC_API_URL=${API_BASE_URL}

# Para produção, defina estas variáveis no painel da Vercel:
# API_BASE_URL=https://seu-backend-render.onrender.com/api
# NODE_ENV=production
# DEBUG_MODE=false
# NODE_ENV=production
# DEBUG_MODE=false
