{
  "name": "controle-de-combustivel",
  "version": "1.0.0",
  "description": "Sistema completo para gerenciamento e controle de abastecimento de combustível para frotas de caminhões",
  "main": "backend/server.js",
  "scripts": {
    "setup": "node scripts/setup-env.js && npm run install:all",
    "install:all": "node scripts/install-all.js",
    "dev": "node scripts/dev.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:db": "cd backend && npm run dev",
    "dev:ui": "cd frontend && npm run dev",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:unit": "node tests/unit/run-tests.js",
    "test:integration": "node tests/integration/run-tests.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test",
    "test:manual": "cd tests/manual && http-server -o",
    "test:watch": "npm run test:all -- --watch",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Backend build completed'",
    "build:prod": "NODE_ENV=production npm run build",
    "migrate": "cd backend && npm run migrate",
    "migrate:status": "cd backend && npm run migrate:status",
    "migrate:rollback": "cd backend && npm run migrate:rollback",
    "migrate:reset": "cd backend && npm run migrate:reset",
    "migrate:seed": "cd backend && npm run db:seed",
    "cleanup": "node scripts/cleanup-project.js",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "clean": "npm run clean:node_modules && npm run clean:logs",
    "clean:node_modules": "rimraf node_modules backend/node_modules frontend/node_modules",    "clean:logs": "rimraf logs/*.log",
    "prod:start": "NODE_ENV=production npm start",
    "prod:build": "NODE_ENV=production npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexandreLiberatto/controle-de-combustivel.git"
  },
  "keywords": [
    "combustivel",
    "frota",
    "caminhoes",
    "abastecimento",
    "gestao",
    "relatorios",
    "dashboard",
    "controle",
    "postgresql",
    "express",
    "javascript"
  ],
  "author": "Alexandre Liberatto <48991604054>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlexandreLiberatto/controle-de-combustivel/issues"
  },
  "homepage": "https://github.com/AlexandreLiberatto/controle-de-combustivel#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "http-server": "^14.1.1",
    "rimraf": "^4.4.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4"
  }
}
